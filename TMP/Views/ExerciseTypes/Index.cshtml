@using TMP.Domain.Entities.Exercises
@using TMP.Domain.Entities
@using System.Collections.Generic


@model IEnumerable<ExerciseType>


@{
    ViewBag.Title = "All workout types";
    Layout = "~/Views/Shared/_StndGridLayout.cshtml";
    ViewBag.PageCSS = "allExerciseTypesPage";
}

@section heading {
    <h2>All workout types</h2>
}


<ul>
    @foreach (var exerciseType in Model)
    {
        <li>
            <span>
                @exerciseType.ExerciseName
            </span>
            <span class="type">
                @{
                    switch (exerciseType.MetricType)
                    {
                        case MetricType.DISTANCE:
                            <span class="fitnessForever-bike15">Distance</span>
                            break;
                        case MetricType.TIME:
                            <span class="fitnessForever-chronometer19">Time</span>
                            break;
                        case MetricType.REP:
                            <span class="fitnessForever-flexions">Body weight reps</span>
                            break;
                        case MetricType.WEIGHT:
                            <span class="fitnessForever-dumbbell24">Free weight</span>
                            break;
                        default:
                            <span>Unknown</span>
                            break;
                    }
                }
            </span>
       </li>
    }
</ul>

@section rightPanel {
    <ul class="contextLinks">
        <li>
            @Html.ActionLink("Add a new workout", "Add")
        </li>
        <li>
            @Html.ActionLink("Workouts I created", "Mine")
        </li>
    </ul> 
 }


